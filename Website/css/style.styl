/*
	IMPORTACIONES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
@import 'nib'
@import 'style-icon.styl'

@font-face 
    font-family 'Strawberry-Muffins'
    src url('../fonts/Strawberry-Muffins.ttf')

@font-face 
	font-family 'Lato-Semibold'
	src url('../fonts/Lato-Semibold.ttf')

@font-face 
	font-family 'Lato-Regular'
	src url('../fonts/Lato-Regular.ttf')    

/*
	VARIABLES
-------------------------------------------------------------------------*/
naranja = #f18324

gris-login = #808080
gris-claro = #f2f2f2
gris-texto = #969798
gris-texto2 = #4d4d4d

verde-corporativo = #7ac943
verde-sombra = #009245

azul1 = #64b5f6
azul2 = #dceae9


/*
	MIXINS
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
flex-center()
	display flex
	flex-wrap wrap
	justify-content center
	
flex-around()
	display flex
	flex-wrap wrap
	justify-content space-around
	
flex-between()
	display flex
	flex-wrap wrap
	justify-content space-between
	
flex-flexStart()
	display flex
	flex-wrap wrap
	justify-content flex-start

/*
	CLASES MADRES
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/		
body
	font-size 16px
	margin 0
	
h1
	margin 0
	padding 0
	font-size 3em
	font-family 'Lato-Regular',sans-serif
h2
h3
h4
h5
	margin 0
	padding 0
	font-family 'Lato-Regular',sans-serif
		
p
	margin 0
	padding 0
	font-size 1em
	font-family 'Lato-Regular',sans-serif
	
figure
	margin 0	


/*
	HEADER
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
.header
	padding-top 1em
	&-head
		display flex
		position relative
		z-index 3
		.logo
			width 15em
			padding 1em 0 0 4em
			img
				width 100%
		.phone
			margin-left auto
			padding 2em 4em 0 0
			span
			p
				display inline-block
				vertical-align top
				color white
			
			span
				font-size 1.5em
			p
				font-family 'Lato-Semibold',sans-serif
	&-explanation
		text-align center
		margin-top 4em
		position relative
		z-index 3
		h1
		h2
		h4
			font-family 'Strawberry-Muffins',sans-serif
		
		h1
			font-size 4em
			text-shadow : 3px 3px 0px rgba(0, 0, 0, 0.3);
			color white
		h2
			font-size 2em
		h4
			color naranja
			font-size 1.5em
			margin-top 0.7em
		&-works
			flex-center()
			margin-top 1.5em
			.item
				width 12em
				span
					font-size 5em
				p
					font-size 1em
					font-family 'Strawberry-Muffins',sans-serif
		&-stores
			flex-center()
			margin-top 1.5em
			position relative
			z-index 3
			.item				
				border 2px solid black
				transition .2s linear
				a
					display inline-block
					padding 0.5em
					img
						width 100%
				&:hover
					background naranja
				&:nth-child(1)
					margin-right 0.5em
	&-diagonal
		z-index 2
		display block
		margin-top -50em
		width 100%
		background #fff
		transform skew(0deg,-15deg)
		position relative
		overflow hidden
		transition all .5s ease-in-out
		left 0
		opacity 1
		.wrapper
			width 100%
			padding 29em 0em
			position relative
			.back-contact
				position absolute
				background: url(../img/background-header.jpg) no-repeat center center;
				background-attachment fixed
				background-size cover
				background-color #8283A7
				top 16em
				left 0
				right 0
				bottom -16em
				transform skew(0,15deg)
				

/*
	CUSTOMERS
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
.customers
	width 75%
	margin -4em auto 10em auto
	position relative
	z-index 5
	&-raptor
		position relative
		figure
			width 60%
			margin 0 auto
			img
				width 100%
		.note
			position absolute
			top 5em
			right 10%
			span
			p
				display inline-block
			
			span
				font-size 1.5em
				position relative
				top 0.5em
			p
				font-family 'Strawberry-Muffins',sans-serif
	&-title
		text-align center
		margin 3em 0 2em 0
		h2
			font-size 1.7em
			font-family 'Strawberry-Muffins',sans-serif
			
	&-opinion
		flex-center()
		position relative
		top 4em
		.item
			width 30%
			flex-center()
			figure
				width 5em
				img
					width 100%
					border-radius 50%
			&-datos
				width 70%
				padding-left 1em
				h4
					text-align center
					font-size 1.2em
					font-family 'Strawberry-Muffins',sans-serif
				.link
					text-align center
					margin-top 0.5em
					a
						display inline-block
						color naranja
						font-family 'Strawberry-Muffins',sans-serif
						font-size 1.2em
						&:hover
							text-decoration underline
			&:nth-child(1)
				margin-top 4em
			&:nth-child(3)
				margin-top -4em
				
	
	
    			
/*
	CONTACTO
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/
.contact
	&-container
		flex-center()		
		&-item
			position relative
			z-index 4
			margin-bottom 9em
			form
				background white
				border-top 1.8em solid naranja
				padding 2em 1em
				boder-radius 5px
				box-shadow : -1px 3px 5px rgba(0, 0, 0, 0.4);
				.title
					text-align center
					h4
						font-family 'Strawberry-Muffins',sans-serif
						font-size 1.4em
					p
						text-align center
				.mensaje
					display none
					margin 1em 0
					padding 2.3em 0
					border-top 1px dashed gris-texto
					border-bottom 1px dashed gris-texto
					p
						text-align center
				.submit
					text-align center
					button
						background none
						border 0
						span
							font-size 3.7em
							color naranja
						&:hover
							span
								color azul1
			&:nth-child(1)
				width 30em
				height 30em
				margin-right -4em
				position relative
				z-index 5
				border-radius 5px
				
				background-color gris-claro
				background-image url("../img/img-contact.jpg")
				background-position center
				background-repeat no-repeat
				background-size cover
			&:nth-child(2)
				width 30%
				position relative
				z-index 6
				top -6em
			
				
					
		&.diagonal-b		
			z-index 3
			display block
			margin-top 3em
			/*margin-bottom 169px*/
			width 100%
			background #fff
			transform skew(0deg,-15deg)
			position relative
			overflow hidden
			transition all .5s ease-in-out
			left 0
			opacity 1
			.wrapper
				/*display block
				margin -116px auto*/
				width 100%
				padding 24em 42em
				/*transform skew(0deg,15deg)*/
				position relative
				/* z-index: 2; */
				.back-contact
					position absolute
					background: url(../img/app-edit.png) no-repeat center center;
					background-attachment fixed
					background-size cover
					background-color #8283A7
					top -16em
					left 0
					right 0
					bottom -16em
					transform skew(0,15deg)
						
.g-recaptcha
	text-align center
	margin-bottom 1em
.g-recaptcha>div>div
	width auto !important
					
/*
	FOOTER
-------------------------------------------------------------------------
-------------------------------------------------------------------------*/	
.footer
	background gris-claro
	padding 1em
	&-container
		width 75%
		margin 0 auto
		flex-between()
		&-item
			&:nth-child(1)
				a
					display inline-block
					width 11em
					img
						width 100%
			&:nth-child(2)
				padding-top 0.3em
				.socialMedia
					display inline-block
					a
						display inline-block
						font-size 2.1em				
							
	p
		text-align center
		width 75%
		margin 1.3em auto 0 auto
	h5
		text-align center
		font-family 'Strawberry-Muffins',sans-serif
		font-size 1em
		color black
		padding-top 0.2em
		a
			color naranja
			transition .2s linear
			&:hover
				color azul1


