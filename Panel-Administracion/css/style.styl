					margin-top 1.4em
					text-align center
					input
						width 90%
						margin 0 auto
						color white
						padding 0.5em 0.5em 0.7em 0.5em
						font-size 1em
						border 0
						transition .2s linear		
			h5
				font-size 0.9em
				font-family 'Roboto-Regular',sans-serif
				color gris-oscuro
				text-align center
				margin 1em 0 2em 0
				a
					color mostaza
					&:hover
						text-decoration underline
			.return-login
				text-align center
				display block
				margin 1em 0
				color gris-oscuro
				font-size 1em
				&:before
					content "<"
					padding-right 0.2em
				&:hover
					color mostaza
					
			&:nth-child(1)
				text-align center
				margin-left 0
		
		
